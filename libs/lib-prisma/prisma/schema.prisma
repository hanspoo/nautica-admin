// prisma/schema.prisma
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Boat {
  id                String   @id @default(uuid())
  imagen            String
  detailImg1        String?
  detailImg2        String?
  detailImg3        String?
  detailImg4        String?
  detailImg5        String?
  detailImg6        String?
  tittle            String
  value             String
  duracion          String
  personas          String
  bedrooms          String
  largo             String?
  info              String
  marca             String
  materialCasco     String?
  a√±o              String
  modeloMotor       String
  Horas             String
  Carga             String
  pasajeros         String?
  tipoDeCombustible String
  horasDeUso        String
  descripcion       String
  caracteristicas   String[] // dynamic features list

  @@map("boat")
}
